{
    "name": "fluig-vscode-extension",
    "displayName": "Fluig - Extensão VS Code",
    "description": "Extensão para agilizar o desenvolvimento para o TOTVS Fluig no VS Code",
    "version": "0.0.5",
    "publisher": "BrunoGasparetto",
    "repository": {
        "type": "git",
        "url": "https://github.com/brunogasparetto/fluig-vscode-extension"
    },
    "engines": {
        "vscode": "^1.54.0"
    },
    "categories": [
        "Snippets",
        "Programming Languages",
        "Other"
	],
    "activationEvents": [
		"onCommand:fluig-vscode-extension.newDataset",
		"onCommand:fluig-vscode-extension.newForm",
		"onCommand:fluig-vscode-extension.newFormEvent",
		"onCommand:fluig-vscode-extension.newWorkflowEvent"
	],
    "main": "./dist/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "fluig-vscode-extension.newDataset",
                "title": "Novo Dataset",
                "category": "Fluig"
			},
            {
                "command": "fluig-vscode-extension.newForm",
                "title": "Novo Formulário",
                "category": "Fluig"
			},
            {
                "command": "fluig-vscode-extension.newFormEvent",
                "title": "Novo Evento de Formulário",
                "category": "Fluig"
			},
            {
                "command": "fluig-vscode-extension.newWorkflowEvent",
                "title": "Novo Evento de Processo",
                "category": "Fluig"
			}
		],

        "menus": {
            "commandPalette": [
                {
                    "command": "fluig-vscode-extension.newFormEvent",
                    "when": "false"
				},
                {
                    "command": "fluig-vscode-extension.newWorkflowEvent",
                    "when": "false"
				}
			],

            "explorer/context": [
                {
                    "command": "fluig-vscode-extension.newDataset",
                    "group": "navigation@-1"
				},
                {
                    "command": "fluig-vscode-extension.newForm",
                    "group": "navigation@-1"
				},
                {
                    "command": "fluig-vscode-extension.newFormEvent",
                    "when": "resourcePath =~ /[\\/\\\\]forms[\\/\\\\].+$/",
                    "group": "navigation@-1"
				},
                {
                    "command": "fluig-vscode-extension.newWorkflowEvent",
                    "when": "resourceExtname == .process",
                    "group": "navigation@-1"
				}
			]
        },

        "snippets": [
            {
                "language": "html",
                "path": "./snippets/html.json"
            },
            {
                "language": "javascript",
                "path": "./snippets/javascript.json"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run package",
        "compile": "webpack",
        "watch": "webpack --watch",
        "package": "webpack --mode production --devtool hidden-source-map",
        "test-compile": "tsc -p ./",
        "test-watch": "tsc -watch -p ./",
        "pretest": "npm run test-compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^7.1.3",
        "@types/mocha": "^8.0.4",
        "@types/node": "^12.11.7",
        "@types/vscode": "^1.54.0",
        "@typescript-eslint/eslint-plugin": "^4.14.1",
        "@typescript-eslint/parser": "^4.14.1",
        "eslint": "^7.19.0",
        "glob": "^7.1.6",
        "mocha": "^8.2.1",
        "ts-loader": "^8.0.14",
        "typescript": "^4.1.3",
        "vscode-test": "^1.5.0",
        "webpack": "^5.19.0",
        "webpack-cli": "^4.4.0"
    }
}
