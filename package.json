{
    "name": "fluig-vscode-extension",
    "displayName": "Fluig - Extensão VS Code",
    "description": "Extensão para agilizar o desenvolvimento para o TOTVS Fluig no VS Code",
    "version": "0.0.7",
    "publisher": "BrunoGasparetto",
    "repository": {
        "type": "git",
        "url": "https://github.com/brunogasparetto/fluig-vscode-extension"
    },
    "engines": {
        "vscode": "^1.55.0"
    },
    "categories": [
        "Snippets",
        "Programming Languages",
        "Other"
    ],
    "activationEvents": [
        "onCommand:fluig-vscode-extension.newDataset",
        "onCommand:fluig-vscode-extension.newForm",
        "onCommand:fluig-vscode-extension.newFormEvent",
        "onCommand:fluig-vscode-extension.newWorkflowEvent",
        "onCommand:fluig-vscode-extension.addServer",
        "onCommand:fluig-vscode-extension.deleteServer",
        "onView:fluig-vscode-extension.servers"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "fluig-vscode-extension.newDataset",
                "title": "Novo Dataset",
                "category": "Fluig"
            },
            {
                "command": "fluig-vscode-extension.newForm",
                "title": "Novo Formulário",
                "category": "Fluig"
            },
            {
                "command": "fluig-vscode-extension.newFormEvent",
                "title": "Novo Evento de Formulário",
                "category": "Fluig"
            },
            {
                "command": "fluig-vscode-extension.newWorkflowEvent",
                "title": "Novo Evento de Processo",
                "category": "Fluig"
            },
            {
                "command": "fluig-vscode-extension.addServer",
                "title": "Adicionar Server",
                "category": "Fluig",
                "icon": {
                    "light": "src/resources/images/light/add.svg",
                    "dark": "src/resources/images/dark/add.svg"
                }
            },
            {
                "command": "fluig-vscode-extension.deleteServer",
                "title": "Excluir Server",
                "category": "Fluig",
                "icon": {
                    "light": "src/resources/images/light/trash.svg",
                    "dark": "src/resources/images/dark/trash.svg"
                }
            }
        ],
        "menus": {
            "commandPalette": [
                {
                    "command": "fluig-vscode-extension.newFormEvent",
                    "when": "false"
                },
                {
                    "command": "fluig-vscode-extension.newWorkflowEvent",
                    "when": "false"
                }
            ],
            "explorer/context": [
                {
                    "command": "fluig-vscode-extension.newDataset",
                    "group": "navigation@-1"
                },
                {
                    "command": "fluig-vscode-extension.newForm",
                    "group": "navigation@-1"
                },
                {
                    "command": "fluig-vscode-extension.newFormEvent",
                    "when": "resourcePath =~ /[\\/\\\\]forms[\\/\\\\].+$/",
                    "group": "navigation@-1"
                },
                {
                    "command": "fluig-vscode-extension.newWorkflowEvent",
                    "when": "resourceExtname == .process",
                    "group": "navigation@-1"
                }
            ],
            "view/title": [
                {
                    "command": "fluig-vscode-extension.addServer",
                    "when": "view == fluig-vscode-extension.servers",
                    "group": "navigation"
                }
            ],
            "view/item/context": [
                {
                    "command": "fluig-vscode-extension.deleteServer",
                    "when": "view == fluig-vscode-extension.servers && viewItem == serverItem",
                    "group": "inline"
                }
            ]
        },
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "fluig-config",
                    "title": "Fluig",
                    "icon": "src/resources/images/icon-brand.png"
                }
            ]
        },
        "views": {
            "fluig-config": [
                {
                    "id": "fluig-vscode-extension.servers",
                    "name": "Servidores"
                }
            ]
        },
        "snippets": [
            {
                "language": "html",
                "path": "./snippets/html.json"
            },
            {
                "language": "javascript",
                "path": "./snippets/javascript.json"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run package",
        "compile": "webpack",
        "watch": "webpack --watch",
        "package": "webpack --mode production --devtool hidden-source-map",
        "test-compile": "tsc -p ./",
        "test-watch": "tsc -watch -p ./",
        "pretest": "npm run test-compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^7.1.3",
        "@types/mocha": "^8.0.4",
        "@types/node": "^12.11.7",
        "@types/vscode": "^1.55.0",
        "@typescript-eslint/eslint-plugin": "^4.14.1",
        "@typescript-eslint/parser": "^4.14.1",
        "eslint": "^7.19.0",
        "glob": "^7.1.6",
        "mocha": "^8.2.1",
        "ts-loader": "^8.0.14",
        "typescript": "^4.1.3",
        "vscode-test": "^1.5.0",
        "webpack": "^5.30.0",
        "webpack-cli": "^4.4.0"
    },
    "dependencies": {
        "axios": "^0.21.1",
        "template-literal": "^1.0.3"
    }
}
